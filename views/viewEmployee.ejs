<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View-employee</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="/Assets/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,100;9..40,200;9..40,300;9..40,400;9..40,500;9..40,600;9..40,700;9..40,800;9..40,900;9..40,1000&family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>
  <div class="container">
    <div class="main-section">

      <div class="side-bar-heading">
        <div class="heading-section">
          <h2>Employee</h2>
          <h4>Management</h4>
        </div>
        <hr>
        <div class="nav-list">
          <ul>
            <li><i class="fa-solid fa-house"></i><a href="#">Dashboard</a></li>
            <li id="homeEmp" onclick=" homeEmployee()"><i class="fa-solid fa-chart-simple"></i><a href="#">Employees</a>
            </li>
            <li><i class="fa-solid fa-user"></i><a href="#">My Profile</a></li>
            <li><i class="fa-solid fa-right-from-bracket"></i><a href="#">Logout</a></li>
          </ul>
        </div>
        <div class="side-bar-footer">
          <hr>
          <div class="side-footer">
            <p>Powered by</p>
            <img src="/Assets/images/image 1.png" alt="">
          </div>
        </div>
      </div>
      <div class="content-section">
        <div class="main-box-heading">
          <div class="content-heading">
            <h3 id="empName">Dashboard / Employees / Employee Details</h3>
            <h1>Employee Details</h1>
          </div>
          <div class="search-section">
            <input type="search" placeholder="&#xF002; Search" style="font-family:Arial,FontAwesome; padding: 10px;"
              id="searchEmployee">
            <i class="fa-regular fa-bell"></i>
            <div class="searchImg">
              <img src="/Assets/images/Elipse 5.png" alt="img">
            </div>
          </div>
        </div>
        <div class="box-view-employee">
          <div class="view-box">
            <div class="employee-row-heading">
              <img src="/Assets/images/Background Image.png" alt="">
              <div class="employee-heading" id="employee-heading">
                <form id="viewEmployee_id">

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- delete-warning-modal -->
    <div id="delete_employee">
      <div class="delete_content">
        <h3>Delete Employee</h3>
        <button id="close-btun" onclick=" close_delete_employee()"><i class="fa-solid fa-xmark"></i></button>
      </div>
      <div class="delete_popup-content">
        <p>Are you sure you want to delete this employee?</p>
      </div>
      <div class="delete_btn">
        <button type="button" class="btn btn-light btn-main" onclick="close_delete_employee()">Cancel</button>
        <button type="button" class="btn btn-danger btn-delete" id="emp_del">Delete</button>
      </div>
    </div>

    <!-- modal-delete -->
    <div id="deleted-emp">
      <div class="delete_content">
        <h3 style="color:red;">Deleted Successfully</h3>
      </div>
      <div class="delete_btn">
        <button type="button" class="btn btn-danger btn-delete" id="emp_del"
          onclick=" homeEmployee(location.reload())">OK</button>
      </div>
    </div>

    <!-- edit-employee -->

    <div id="edit-employee-form">
      <div class="container">
        <div class="col-md-8 content py-3 rounded-4 px-3">
          <form id="edit-employee-forms">
            <div class="heading-form">
              <label for="" class="heading my-3">Edit Employee</label>
              <button id="close-btn" onclick=" close_edit_form(location.reload()) "><i
                  class="fa-solid fa-xmark"></i></button>
            </div>
            <!-- 1.row -->
            <div class="row">
              <div class="edit-heading col-md-5">
                <div class="align-items-center edit-employee rounded-4 cards">
                  <input type="file" accept="image/*" id="editForm-input-file" hidden>
                  <div id="editForm-img-view">
                    <img id="image-preview" alt="" style="width: 110px; height: 110px;">
                  </div>
                </div>

                <div class="edit-btn col-md-3">
                  <button onclick="changeImage(event)"> <label for="editForm-input-file"
                      id="editForm-drop-area">Change</label></button>
                </div>
              </div>
            </div>

            <!-- 2.row -->
            <div class="row">
              <div class="input-section col-md-3">
                <label for="" class="form-label mt-3 mb-2">Salutation</label>
                <select class="form-select form-salutation rounded-3" aria-label="Default select example"
                  id="salutation-edit">
                  <option value="Mr.">Mr.</option>
                  <option value="Mrs.">Mrs.</option>
                </select>
              </div>
              <div class="input-section col-md-4">
                <label for="" class="form-label mt-3 mb-2">First Name</label>
                <input type="text" class="form-control rounded-3" placeholder="john" aria-label="First name"
                  id="firstName-edit">
              </div>
              <div class="input-section col-md-5">
                <label for="" class="form-label mt-3 mb-2">Last Name</label>
                <input type="text" class="form-control rounded-3" placeholder="doe " aria-label="First name"
                  id="lastName-edit">
              </div>
            </div>
            <!-- 3.row -->
            <div class="row">
              <div class="input-section col-md-6">
                <label for="" class="form-label mt-3 mb-2">Email Address</label>
                <input type="email" class="form-control rounded-3" placeholder="mail@simmmple.com" aria-label="email"
                  id="email-edit">
              </div>
              <div class="input-section col-md-6">
                <label for="" class="form-label mt-3 mb-2">Mobile Number</label>
                <input type="text" class="form-control rounded-3" placeholder="enter mobile number" aria-label="text"
                  id="phone-edit">
              </div>
            </div>
            <!-- 4.row -->
            <div class="row">
              <div class="input-section col-md-6">
                <label for="" class="form-label mt-3 mb-2">Date of Birth</label>
                <input type="date" class="form-control rounded-3" style="color: #949DB9;" placeholder="select"
                  aria-label="calender" id="dob-edit">
              </div>
              <div class="input-section col-md-6">
                <label for="" class="form-label mt-3 mb-3">Gender</label><br>
                <input class="form-check-input" type="radio" name="gender-edit" value="Male" id="male">
                <label class="form-check-label me-4" for="male">
                  Male
                </label>
                <input class="form-check-input" type="radio" name="gender-edit" value="Female" id="female">
                <label class="form-check-label" for="female">
                  Female
                </label>
              </div>
            </div>
            <!-- 4.5row -->
            <div class="row">
              <div class="input-section col-md-12">
                <label for="" class="form-label mt-3 mb-2">Qualifications</label>
                <input type="text" class="form-control rounded-3" placeholder="enter address" aria-label="address"
                  id="qualifications-edit">
              </div>
            </div>
            <!-- 5.row -->
            <div class="row">
              <div class="input-section col-md-12">
                <label for="" class="form-label mt-3 mb-2">Address</label>
                <input type="text" class="form-control rounded-3" placeholder="enter address" aria-label="address"
                  id="address-edit">
              </div>
            </div>
            <!-- 6.row -->
            <div class="row">
              <div class="input-section col-md-6">
                <label for="" class="form-label mt-3 mb-2">Country</label>
                <select class="form-select detail-select rounded-3" style="color: #949DB9;"
                  aria-label="Default select example" id="country-edit">
                  <option selected>Select</option>
                  <option value="India">India</option>
                  <option value="USA">USA</option>
                  <option value="Australia">Australia</option>
                </select>
              </div>
              <div class="input-section col-md-6">
                <label for="" class="form-label mt-3 mb-2">State</label>
                <select class="form-select detail-select rounded-3" style="color: #949DB9;"
                  aria-label="Default select example" id="state-edit">
                  <option selected>Select</option>
                  <option value="Kerala">Kerala</option>
                  <option value="Tamilnadu">Tamil nadu</option>
                  <option value="Karnataka">Karnataka</option>
                </select>
              </div>
            </div>
            <!-- 7.row -->
            <div class="row">
              <div class="input-section col-md-6">
                <label for="" class="form-label mt-3 mb-2">City</label>
                <input type="text" class="form-control rounded-3" placeholder="enter city" aria-label="city"
                  id="city-edit">
              </div>
              <div class="input-section col-md-6">
                <label for="" class="form-label mt-3 mb-2">Pin/Zip</label>
                <input type="text" class="form-control rounded-3" placeholder="enter zip/pin" aria-label="city"
                  id="pin-edit">
              </div>
            </div>
            <div class="row">
              <div class="input-section col-md-6">
                <label for="" class="form-label mt-3 mb-2">username</label>
                <input type="text" class="form-control rounded-3" placeholder="enter city" aria-label="city"
                  id="username-edit">
                <label for="" class="error-alert">This Space is empty</label>
              </div>
              <div class="input-section col-md-6">
                <label for="password" class="form-label mt-3 mb-2">password</label>
                <input type="password" id="password-edit" class="form-control rounded-3" placeholder="enter password"
                  aria-label="password">
                <label for="" class="error-alert">This Space is empty</label>
              </div>
            </div>
            <!-- row.8 -->
            <div class="row">
              <div class="input-section col-md-12 mt-4 mb-3">
                <button type="button" class="btn btn-light btn-main"
                  onclick="close_edit_form(location.reload())">Cancel</button>
                <button type="button" class="btn btn-primary btn-filled btn-main" id="btn-main">Save Changes</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- overlay -->
    <div class="overlay"></div>

    <script src="/Assets/Javascript/js.js"></script>
    <script src="/Assets/Javascript/viewEmployee.js"></script>
</body>

</html>